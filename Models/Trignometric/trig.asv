% Purpose: To calculate the gradient of the function in
%   trignometric model of order n
function ANS = trig(xi,theta)
  n =length(theta);
  ANS = zeros(n,1);
  ANS(1:n/2,1)  = applyfun(@(i) cos(i*xi),1:n/2);
  ANS(n/2+1:n,1)    = applyfun(@(i) sin(i*xi(i)),[n/2:n]);
end
